# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# Matches js
[*.{ts,js}]
indent_style = space
indent_size = 4

# Matches package.json
[package.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
